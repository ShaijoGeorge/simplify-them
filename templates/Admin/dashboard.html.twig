{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <h2 class="mb-0">Overview</h2>
            <small class="text-muted">{{ current_month }} snapshot</small>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="container-fluid dashboard-wrap">

    <div class="row g-4">
        <div class="col-xl-7">
            <div class="card hero-card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2">Premiums Due</h6>
                            <h1 class="fw-bold mb-1">â‚¹ {{ (due_amount/100)|number_format(2) }}</h1>
                            <p class="text-muted mb-0">Expected collections for {{ current_month }}</p>
                        </div>
                        <div class="ms-auto">
                            <div class="hero-icon">
                                <i class="fas fa-wallet"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-5">
            <a href="{{ ea_url()
                .setController('App\\Controller\\Admin\\PolicyCrudController')
                .setAction('index')
                .set('filters[status][comparison]', '=')
                .set('filters[status][value]', 'LAPSED') }}" 
               class="text-decoration-none">
                
                <div class="card alert-card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="text-uppercase text-muted mb-2">Revival Opportunities</h6>
                                <h2 class="fw-bold mb-1">{{ lapsed_count }}</h2>
                                <p class="text-muted mb-0">Policies inactive for over 6 months</p>
                            </div>
                            <div class="alert-icon">
                                <i class="fas fa-bell"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 mb-3">
            <h5 class="fw-semibold">Quick Actions</h5>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\ClientCrudController').setAction('new') }}" class="text-decoration-none">
                <div class="card quick-card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="qc-icon bg-info">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-1">Add New Client</h6>
                                <small class="text-muted">Register a new customer</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\PolicyCrudController').setAction('new') }}" class="text-decoration-none">
                <div class="card quick-card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="qc-icon bg-secondary">
                                <i class="fas fa-file-signature"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-1">Create Policy</h6>
                                <small class="text-muted">Term, Endowment & more</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\PremiumReceiptCrudController').setAction('new') }}" class="text-decoration-none">
                <div class="card quick-card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="qc-icon bg-success">
                                <i class="fas fa-coins"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-1">Collect Premium</h6>
                                <small class="text-muted">Payment & receipt entry</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .dashboard-wrap h1 { font-size: 2.4rem; }

    .hero-card {
        background: linear-gradient(135deg, #4e73df, #224abe);
        color: #fff;
    }
    .hero-card .text-muted { color: rgba(255,255,255,0.75) !important; }
    .hero-icon {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        background: rgba(255,255,255,0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
    }

    /* Added Transition for Alert Card */
    .alert-card {
        background: linear-gradient(135deg, #fff5f5, #ffe3e3);
        transition: all 0.25s ease;
        border: none;
    }
    /* Hover Effect for Alert Card */
    .alert-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.08);
        cursor: pointer;
    }

    .alert-icon {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: #e74a3b;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .quick-card {
        transition: all 0.25s ease;
        border: none;
    }
    .quick-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    }

    .qc-icon {
        width: 52px;
        height: 52px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 20px;
    }
    .bg-info { background: #36b9cc !important; }
    .bg-success { background: #1cc88a !important; }
    .bg-secondary { background: #858796 !important; }
</style>
{% endblock %}