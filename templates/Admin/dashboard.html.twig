{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Dashboard - {{ current_month }}{% endblock %}

{% block main %}
<div class="row">
    <div class="col-md-6">
        <div class="card mb-4 border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Premiums Due ({{ current_month }})</div>
                        <div class="h3 mb-0 font-weight-bold text-gray-800">
                            â‚¹ {{ due_amount|number_format(2) }}
                        </div>
                        <p class="text-muted mt-2"><small>Total expected collection from active policies.</small></p>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-rupee-sign fa-2x text-gray-300" style="color: #28a745;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4 shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">ðŸŽ‚ Birthdays in {{ current_month }}</h6>
            </div>
            <div class="card-body">
                {% if birthdays is empty %}
                    <p class="text-muted text-center">No birthdays this month.</p>
                {% else %}
                    <ul class="list-group list-group-flush">
                        {% for client in birthdays %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ client.first_name }} {{ client.last_name }}</strong>
                                    <br>
                                    <small class="text-muted">Turns {{ date('now').diff(date(client.dob)).y + 1 }} on {{ client.dob|date('d M') }}</small>
                                </div>
                                <a href="https://wa.me/91{{ client.mobile }}?text=Happy%20Birthday%20{{ client.first_name }}!" target="_blank" class="btn btn-sm btn-success">
                                    <i class="fab fa-whatsapp"></i> Wish
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 mb-3">
        <h5 class="text-gray-800 font-weight-bold pl-1 border-left-primary" style="border-left: 4px solid #4e73df; padding-left: 10px;">
            âš¡ Quick Actions
        </h5>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <a href="{{ ea_url() .setController('App\\Controller\\Admin\\ClientCrudController') .setAction('new') }}" class="text-decoration-none">
            <div class="card border-left-primary shadow h-100 py-2 action-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">New Business</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Add New Client</div>
                            <small class="text-muted">Register a new person or family</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <a href="{{ ea_url() .setController('App\\Controller\\Admin\\PolicyCrudController') .setAction('new') }}" class="text-decoration-none">
            <div class="card border-left-info shadow h-100 py-2 action-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Insurance</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Create Policy</div>
                            <small class="text-muted">New Endowment, Money Back, etc.</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-contract fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-xl-4 col-md-6 mb-4">
        <a href="{{ ea_url() .setController('App\\Controller\\Admin\\PremiumReceiptCrudController') .setAction('new') }}" class="text-decoration-none">
            <div class="card border-left-success shadow h-100 py-2 action-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Finance</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Collect Premium</div>
                            <small class="text-muted">Record payment & download receipt</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-rupee-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<style>
    .action-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s;
        border: none;
    }
    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        cursor: pointer;
    }
    .border-left-primary { border-left: 0.25rem solid #4e73df !important; }
    .border-left-success { border-left: 0.25rem solid #1cc88a !important; }
    .border-left-info    { border-left: 0.25rem solid #36b9cc !important; }
    .text-gray-300 { color: #dddfeb !important; }
</style>
{% endblock %}