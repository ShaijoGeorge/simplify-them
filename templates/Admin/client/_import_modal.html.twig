<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="importModalLabel">
                    <i class="fas fa-file-excel text-success me-2"></i> Import Clients
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <form action="{{ path('app_client_import') }}" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="alert alert-info py-2">
                        <small><i class="fas fa-info-circle"></i> Use the example sheet to avoid format errors.</small>
                    </div>

                    <div class="mb-3 text-center">
                        <a href="{{ path('app_client_download_example') }}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-download"></i> Download Example Sheet
                        </a>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label for="fileUpload" class="form-label fw-bold">Select Excel File</label>
                        <input type="file" class="form-control" id="fileUpload" name="file" accept=".xlsx, .xls" required>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-upload"></i> Upload & Import
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>